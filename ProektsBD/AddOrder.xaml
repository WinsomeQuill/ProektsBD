<Page x:Class="ProektsBD.AddOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProektsBD"
      mc:Ignorable="d"
      Title="AddOrder" Height="322.009" Width="558.239">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Текст заявки:" Margin="10" FontSize="30" Grid.Row="0" Grid.Column="0"></Label>
        <TextBox Name="TextboxAddOrder" Margin="10" Grid.Row="0" Grid.Column="1" ></TextBox>
