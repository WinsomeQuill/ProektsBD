        <ComboBox Name="ComboboxTypeOrder" Margin="10" Grid.Row="1" Grid.Column="1"></ComboBox>
        <Button Name="BtnAddOrder" Width="200" Content="Добавить" Height="80" Grid.Row="2" 
                Grid.Column="1" Click="BtnAddOrder_Click"></Button>
    </Grid>
</Page>
